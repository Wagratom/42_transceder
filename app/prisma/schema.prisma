// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model privateChat {
  id         Int     @default(autoincrement()) @id
  stringKey  String  @unique
  posts messagens[]
}

model messagens {
  id        Int      @default(autoincrement()) @id
  username  String
  message   String
  data      DateTime @default(now())
  author    privateChat?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}
